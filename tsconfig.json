{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "libs/*": [
        "libs/*"
      ],
      "@craftjs/core": [
        "libs/@craftjs/core"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": true,
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}